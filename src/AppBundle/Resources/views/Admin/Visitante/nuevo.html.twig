{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo visitante</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">                                         
            <div class="form-group form-group-sm">
                <label for="form_grupoRel" class="col-sm-3 control-label">Grupo:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.grupoRel, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div> 
            <div class="form-group form-group-sm">
                <label for="form_numeroIdentificacion" class="col-sm-3 control-label">Identificacion:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.numeroIdentificacion, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}                        
                </div>                
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_nombre" class="col-sm-3 control-label">Nombre:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.nombre, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}                        
                </div>                
            </div> 
            <div class="form-group form-group-sm">
                <label for="form_codigo" class="col-sm-3 control-label">Codigo visitante:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.codigo, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}                        
                </div>                
            </div>                 
            <div class="form-group form-group-sm">
                <label for="form_fechaArl" class="col-sm-3 control-label">Fecha arl:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.fechaArl, {'attr': {'maxlength' : 10} }) }} 
                </div>                
            </div>                                                                            
        </div>
    </div>                       
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('admin_visitante') }}">Cancelar</a>                     
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}