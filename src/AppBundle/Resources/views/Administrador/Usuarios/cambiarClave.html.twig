{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}

    <h3>Cambiar clave</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">                
            <div class="form-group form-group-sm">
                <label for="form_clave" class="col-sm-2 control-label">Clave:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.clave, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>                             
            <div class="form-group form-group-sm">
                <label for="form_clave2" class="col-sm-2 control-label">Repetir clave:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.clave2, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
    </div>                
    <div class="modal-footer">     
            <a class="btn btn-default btn-sm" href="{{ path('administrador_usuario') }}">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}            
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}